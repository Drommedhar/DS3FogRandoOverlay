{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch DS3 Fog Randomizer Overlay",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net8.0-windows/DS3FogRandoOverlay.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "build"
        },
        {
            "name": "Launch DS3 Fog Randomizer Overlay (No Build)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net8.0-windows/DS3FogRandoOverlay.exe",
            "args": [],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Launch DS3 Fog Randomizer Overlay (Debug Mode)",
            "type": "coreclr",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/net8.0-windows/DS3FogRandoOverlay.exe",
            "args": [
                "--debug"
            ],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "preLaunchTask": "build",
            "env": {
                "DS3_DEBUG": "true"
            }
        },
        {
            "name": "Attach to DS3 Fog Randomizer Overlay",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}