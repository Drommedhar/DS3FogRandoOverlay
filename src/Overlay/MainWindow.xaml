<Window x:Class="DS3FogRandoOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DS3FogRandoOverlay"
        mc:Ignorable="d"
        Title="DS3 Fog Randomizer Overlay"
        Height="600"
        Width="400"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown">

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Toggle Overlay (F1)"
                      Click="ToggleButton_Click"/>
            <MenuItem Header="Refresh Data (F5)"
                      Click="RefreshButton_Click"/>
            <Separator/>
            <MenuItem Header="Settings..."
                      Click="Settings_Click"/>
            <Separator/>
            <MenuItem Header="Debug Options">
                <MenuItem Header="Scan for Area IDs"
                          Click="ScanAreaIds_Click"/>
                <MenuItem Header="Scan for WorldChrMan"
                          Click="ScanWorldChrMan_Click"/>
                <MenuItem Header="Test Memory Reading"
                          Click="TestMemoryReading_Click"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Reset Position (F9)"
                      Click="ResetPosition_Click"/>
            <Separator/>
            <MenuItem Header="Exit (Esc)"
                      Click="ExitButton_Click"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Window.Resources>
        <Style x:Key="OverlayTextStyle"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontFamily"
                    Value="Consolas"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="3"
                                      ShadowDepth="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle"
               TargetType="TextBlock"
               BasedOn="{StaticResource OverlayTextStyle}">
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="Gold"/>
        </Style>

        <Style x:Key="FogGateTextStyle"
               TargetType="TextBlock"
               BasedOn="{StaticResource OverlayTextStyle}">
            <Setter Property="Margin"
                    Value="5,2"/>
        </Style>

        <Style x:Key="BossGateTextStyle"
               TargetType="TextBlock"
               BasedOn="{StaticResource FogGateTextStyle}">
            <Setter Property="Foreground"
                    Value="Orange"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Border Background="#AA000000"
                CornerRadius="5"
                Padding="10">
            <StackPanel>
                <!-- Drag Handle Header -->
                <Border Background="#22FFFFFF"
                        CornerRadius="3"
                        Padding="5"
                        Margin="0,0,0,10"
                        Cursor="SizeAll"
                        ToolTip="Drag to move overlay. Right-click for options. F1=Toggle, F5=Refresh, F9=Reset, Esc=Exit">
                    <TextBlock x:Name="HeaderText"
                               Text="DS3 Fog Randomizer Overlay"
                               Style="{StaticResource HeaderTextStyle}"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Status -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Status: "
                               Style="{StaticResource OverlayTextStyle}"/>
                    <TextBlock x:Name="StatusText"
                               Text="Initializing..."
                               Style="{StaticResource OverlayTextStyle}"
                               Foreground="Yellow"/>
                </StackPanel>

                <!-- Current Area -->
                <StackPanel Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <TextBlock Text="Current Area: "
                               Style="{StaticResource OverlayTextStyle}"/>
                    <TextBlock x:Name="CurrentAreaText"
                               Text="Unknown"
                               Style="{StaticResource OverlayTextStyle}"
                               Foreground="Cyan"/>
                </StackPanel>

                <!-- Fog Gates Section -->
                <TextBlock Text="Available Fog Gates:"
                           Style="{StaticResource HeaderTextStyle}"
                           Margin="0,5,0,5"/>

                <ScrollViewer x:Name="FogGatesScrollViewer"
                              MaxHeight="400"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Disabled">
                    <StackPanel x:Name="FogGatesPanel"/>
                </ScrollViewer>

                <!-- Controls -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,10,0,0">
                    <Button x:Name="ToggleButton"
                            Content="Hide"
                            Width="60"
                            Height="25"
                            Margin="5,0"
                            Click="ToggleButton_Click"/>
                    <Button x:Name="RefreshButton"
                            Content="Refresh"
                            Width="60"
                            Height="25"
                            Margin="5,0"
                            Click="RefreshButton_Click"/>
                    <Button x:Name="ExitButton"
                            Content="Exit"
                            Width="60"
                            Height="25"
                            Margin="5,0"
                            Click="ExitButton_Click"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
