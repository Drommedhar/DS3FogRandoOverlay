<Window x:Class="DS3FogRandoOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DS3FogRandoOverlay"
        mc:Ignorable="d"
        Title="DS3 Fog Randomizer Overlay"
        Height="400"
        Width="320"
        MinHeight="200"
        MinWidth="280"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="#01000000"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        MouseLeftButtonDown="Window_MouseLeftButtonDown"
        KeyDown="Window_KeyDown">

    <Window.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Settings..."
                      Click="Settings_Click"/>
            <Separator/>
            <MenuItem x:Name="ToggleSpoilerMenuItem"
                      Header="Show Spoiler Information"
                      Click="ToggleSpoilerInfo_Click"/>
            <Separator/>
            <MenuItem Header="Debug Options">
                <MenuItem Header="Scan for Area IDs"
                          Click="ScanAreaIds_Click"/>
                <MenuItem Header="Scan for WorldChrMan"
                          Click="ScanWorldChrMan_Click"/>
                <MenuItem Header="Test Memory Reading"
                          Click="TestMemoryReading_Click"/>
            </MenuItem>
            <Separator/>
            <MenuItem Header="Reset Position (F9)"
                      Click="ResetPosition_Click"/>
            <Separator/>
            <MenuItem Header="Exit (Esc)"
                      Click="ExitButton_Click"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Window.Resources>
        <Style x:Key="OverlayTextStyle"
               TargetType="TextBlock">
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontFamily"
                    Value="Consolas"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="4"
                                      ShadowDepth="2"
                                      Opacity="0.8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="HeaderTextStyle"
               TargetType="TextBlock"
               BasedOn="{StaticResource OverlayTextStyle}">
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="FontSize"
                    Value="14"/>
            <Setter Property="Foreground"
                    Value="Gold"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style>

        <Style x:Key="FogGateTextStyle"
               TargetType="TextBlock"
               BasedOn="{StaticResource OverlayTextStyle}">
            <Setter Property="Margin"
                    Value="5,2"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style>

        <Style x:Key="BossGateTextStyle"
               TargetType="TextBlock"
               BasedOn="{StaticResource FogGateTextStyle}">
            <Setter Property="Foreground"
                    Value="Orange"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style>

        <Style x:Key="DistanceTextStyle"
               TargetType="TextBlock"
               BasedOn="{StaticResource OverlayTextStyle}">
            <Setter Property="Foreground"
                    Value="Yellow"/>
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="FontSize"
                    Value="11"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style>

        <Style x:Key="TooltipStyle"
               TargetType="ToolTip">
            <Setter Property="Background"
                    Value="#DD000000"/>
            <Setter Property="Foreground"
                    Value="White"/>
            <Setter Property="FontFamily"
                    Value="Consolas"/>
            <Setter Property="FontSize"
                    Value="11"/>
            <Setter Property="BorderBrush"
                    Value="Gold"/>
            <Setter Property="BorderThickness"
                    Value="1"/>
            <Setter Property="Padding"
                    Value="8"/>
            <Setter Property="MaxWidth"
                    Value="350"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black"
                                      BlurRadius="6"
                                      ShadowDepth="2"
                                      Opacity="0.8"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToolTip">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4"
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black"
                                                  BlurRadius="6"
                                                  ShadowDepth="2"
                                                  Opacity="0.8"/>
                            </Border.Effect>
                            <TextBlock Text="{TemplateBinding Content}"
                                       Foreground="{TemplateBinding Foreground}"
                                       FontFamily="{TemplateBinding FontFamily}"
                                       FontSize="{TemplateBinding FontSize}"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MinimalHeaderTextStyle"
               TargetType="TextBlock"
               BasedOn="{StaticResource OverlayTextStyle}">
            <Setter Property="FontWeight"
                    Value="Bold"/>
            <Setter Property="FontSize"
                    Value="12"/>
            <Setter Property="Foreground"
                    Value="Gold"/>
            <Setter Property="TextWrapping"
                    Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainGrid" Margin="8">
        <Border x:Name="MainBorder"
                Background="#66000000"
                CornerRadius="5"
                Padding="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Drag Handle Header (Always visible for repositioning) -->
                <Border Grid.Row="0"
                        x:Name="HeaderBorder"
                        Background="#44FFFFFF"
                        CornerRadius="3"
                        Padding="4"
                        Margin="0,0,0,8"
                        Cursor="SizeAll"
                        ToolTip="Drag to move. Resize from bottom-right. Right-click for options. F5=Refresh, F9=Reset, Esc=Exit">
                    <TextBlock x:Name="HeaderText"
                               Text="Fog Gates"
                               Style="{StaticResource MinimalHeaderTextStyle}"
                               HorizontalAlignment="Center"/>
                </Border>

                <!-- Status (Hidden when connected to DS3) -->
                <StackPanel Grid.Row="1"
                            x:Name="StatusPanel"
                            Orientation="Horizontal"
                            Margin="0,0,0,5">
                    <TextBlock Text="Status: "
                               Style="{StaticResource OverlayTextStyle}"/>
                    <TextBlock x:Name="StatusText"
                               Text="Initializing..."
                               Style="{StaticResource OverlayTextStyle}"
                               Foreground="Yellow"/>
                </StackPanel>

                <!-- Current Area (Hidden when connected to DS3) -->
                <StackPanel Grid.Row="2"
                            x:Name="AreaPanel"
                            Orientation="Horizontal"
                            Margin="0,0,0,8">
                    <TextBlock Text="Area: "
                               Style="{StaticResource OverlayTextStyle}"/>
                    <TextBlock x:Name="CurrentAreaText"
                               Text="Unknown"
                               Style="{StaticResource OverlayTextStyle}"
                               Foreground="Cyan"/>
                </StackPanel>

                <ScrollViewer Grid.Row="3"
                              x:Name="FogGatesScrollViewer"
                              VerticalScrollBarVisibility="Hidden"
                              HorizontalScrollBarVisibility="Disabled"
                              Margin="0,0,0,5">
                    <StackPanel x:Name="FogGatesPanel"/>
                </ScrollViewer>

                <!-- Resize Grip Indicator -->
                <Grid Grid.Row="4"
                      HorizontalAlignment="Right"
                      VerticalAlignment="Bottom"
                      Width="12"
                      Height="12"
                      Margin="0,3,0,0">
                    <Path Data="M 0,12 L 12,0 M 4,12 L 12,4 M 8,12 L 12,8"
                          Stroke="#44FFFFFF"
                          StrokeThickness="1"
                          ToolTip="Drag to resize window"/>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Window>
